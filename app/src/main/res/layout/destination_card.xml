<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="270dp"
    android:layout_width="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:id="@+id/item_card"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/photo"
                    android:src="@drawable/logo_cruise_biru"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingEnd="5dp"
                    android:background="@drawable/corner_side_background"
                    android:drawableStart="@drawable/ic_location"
                    android:text="Indonesia"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:layout_above="@+id/linLay"
                    android:background="@color/colorGrey"
                    android:text="3 NIGHT Treasures of the Black Sea"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:id="@+id/linLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGrey"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27 September 2020"
                        android:paddingStart="2dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:textSize="8sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="27 September 2020"
                        android:textSize="8sp"/>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start from"
                    android:textSize="10sp"
                    android:textColor="@color/colorOrange"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_below="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 31.000.000"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrange"
                    android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/ship"
                        android:layout_below="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Royal Bahamas"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_ship"
                        android:drawablePadding="2dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"/>

                <TextView
                    android:id="@+id/visiting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_navigation"
                    android:drawablePadding="2dp"
                    android:textColor="@color/colorBlack"
                    android:text="Fort Laudardale, Nassau, Cruising"
                    android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>